[user]
	name = Matt Blair
	email = me@matthewblair.net
[alias]
	co = checkout
	discard = checkout --
	branches = branch -a
	create-branch = checkout -b
	delete-branch = branch -d
	wlog = log --color-words -p
	glog = log --graph --all --abbrev-commit
	wdiff = diff --color-words
	st = status --ignore-submodules=untracked
	br = branch
    tags-sorted = !git for-each-ref --format='%(committerdate:iso8601)%(taggerdate:iso8601) %(refname:short)' refs/tags | sort -n
	ignore = !echo "$@" >> .gitignore
[merge]
	tool = vimdiff
[core]
	excludesfile = ~/.gitignore_global
	editor = vim -f
	pager = less
	whitespace = trailing-space,space-before-tab
[color]
	ui = auto
	diff = auto
	interactive = auto
	branch = auto
[color "status"]
	changed = yellow
	added = green
	untracked = red
[branch]
	autosetuprebase = always
[github]
	user = mblair
[push]
	default = tracking
